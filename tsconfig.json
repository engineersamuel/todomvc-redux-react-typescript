{
  "version": "2.0.3",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}
